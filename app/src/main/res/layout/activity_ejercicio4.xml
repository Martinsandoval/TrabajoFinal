<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ejemplo.sandoval.trabajofinal.ejercicio4"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/casilleros"
        android:orientation="horizontal"
        android:layout_width="450dp"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:id="@+id/linear1"
        android:background="#ececec"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
       />

        <LinearLayout
            android:id="@+id/linear2"
            android:background="#d0d0d0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/linear3"
            android:background="#ececec"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            />

        <LinearLayout
        android:id="@+id/linear4"
        android:background="#d0d0d0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/linear5"
            android:background="#ececec"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/linear6"
            android:background="#d0d0d0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="horizontal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_below="@+id/casilleros"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/img1"
            android:src="@drawable/ic_numero1"
            android:focusableInTouchMode="true" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/img2"
            android:src="@drawable/ic_numero2"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/img3"
            android:src="@drawable/ic_numero3"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/img4"
            android:src="@drawable/ic_numero4"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/img5"
            android:src="@drawable/ic_numero5"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/img6"
            android:src="@drawable/ic_numero6"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ordenar de menor a mayor"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="22sp"/>
</RelativeLayout>
